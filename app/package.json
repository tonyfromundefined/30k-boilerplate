{
  "name": "@30k/app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node ./esbuild.config.js",
    "dev": "nodemon",
    "start": "NODE_ENV=production node --loader=extensionless ./dist/index.js",
    "test": "vitest run"
  },
  "nodemonConfig": {
    "exec": "rimraf ./dist && yarn node ./esbuild.config.js && node --loader=extensionless ./dist/index.js | yarn pino-pretty --singleLine",
    "ext": "ts,tsx,graphql",
    "ignore": [
      "dist/**",
      "node_modules/**"
    ],
    "watch": "src"
  },
  "dependencies": {
    "@fastify/autoload": "^6.1.0",
    "@fastify/cors": "^10.0.2",
    "@fastify/env": "^5.0.2",
    "@sinclair/typebox": "^0.34.15",
    "dotenv": "^16.4.7",
    "dotenv-safe": "^9.1.0",
    "extensionless": "^1.9.9",
    "fastify": "^5.2.1",
    "fastify-graceful-shutdown": "^4.0.1",
    "fastify-plugin": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "20",
    "esbuild": "^0.24.2",
    "glob": "^11.0.1",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
